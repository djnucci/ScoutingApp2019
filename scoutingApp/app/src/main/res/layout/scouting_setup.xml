<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"/>

    <include
        android:id="@+id/include"
        layout="@layout/content_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="61dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/scouting_setup_setup"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/scouting_tab_height"
                    android:layout_weight="1"
                    android:onClick="switchScoutingTab"
                    android:text="Setup" />

                <Button
                    android:id="@+id/scouting_setup_match"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/scouting_tab_height"
                    android:layout_weight="1"
                    android:onClick="switchScoutingTab"
                    android:text="Match Play" />

                <Button
                    android:id="@+id/scouting_setup_endgame"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/scouting_tab_height"
                    android:layout_weight="1"
                    android:onClick="switchScoutingTab"
                    android:text="End Game" />

            </TableRow>

        </TableLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:scaleType="fitStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:srcCompat="@drawable/starting_platform" />

            <RadioButton
                android:id="@+id/setup_level_two_left"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="253dp"
                android:layout_height="195dp"
                android:layout_marginTop="150dp"
                android:background="@color/slightGrey"
                android:text="Level 2"
                android:textSize="@dimen/setup_button_text_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/setup_level_one"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="182dp"
                android:layout_height="655dp"
                android:layout_marginStart="8dp"
                android:background="@color/slightGrey"
                android:text="Level 1"
                android:textSize="@dimen/setup_button_text_height"
                app:layout_constraintStart_toEndOf="@+id/setup_level_two_left"
                app:layout_constraintTop_toTopOf="@+id/setup_level_two_left" />

            <RadioButton
                android:id="@+id/setup_level_two_right"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="250dp"
                android:layout_height="199dp"
                android:layout_marginBottom="160dp"
                android:background="@color/slightGrey"
                android:text="Level 2"
                android:textSize="@dimen/setup_button_text_height"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="86dp"
                app:layout_constraintBottom_toBottomOf="@+id/setup_level_one"
                app:layout_constraintStart_toEndOf="@+id/setup_level_one"
                app:layout_constraintTop_toTopOf="@+id/setup_level_one">

                <RadioButton
                    android:id="@+id/setup_hatch_radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hatch"
                    android:textSize="@dimen/setup_button_text_height" />

                <RadioButton
                    android:id="@+id/setup_cargo_radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cargo"
                    android:textSize="@dimen/setup_button_text_height" />

                <RadioButton
                    android:id="@+id/setup_nothing_radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nothing"
                    android:textSize="@dimen/setup_button_text_height" />
            </RadioGroup>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>